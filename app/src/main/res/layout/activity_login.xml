        <com.google.android.material.tabs.TabLayout
            android:id="@+id/loginActivityLoginView_tab_conatiner"
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:tabPaddingStart="15dp"
            app:tabPaddingEnd="15dp"
            app:tabIndicatorColor="@color/sexyRed"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom"
            app:tabIndicatorHeight="2dp"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/LoginActivityTabLayoutStyle">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/loginActivityLoginView_tab_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/loginActivityLoginView_tab_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN UP" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/loginActivityLoginView_tab_item_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@color/sexyBlack">

            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>

