<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <RelativeLayout
        android:alpha="0.7"
        android:background="@drawable/login_image_001"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginActivity__header_container"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loginActivity__header_title"
            android:text="Sign in"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/loginActivity__header_subtitle"
            android:text="Sign In Manager Your Account"
            android:textSize="26sp"
            android:layout_below="@+id/loginActivity__header_title"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginActivity__body__container"
        android:layout_below="@+id/loginActivity__header_container"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/loginActivity__body__input_id_container"
            android:visibility="gone"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/loginActivity__body__input_id_icon"
                android:layout_centerVertical="true"
                android:src="@drawable/user_unfocus"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/loginActivity__body__input_id_edit"
                android:hint="@string/username"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:layout_toEndOf="@+id/loginActivity__body__input_id_icon"
                android:layout_centerVertical="true"
                android:paddingStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loginActivity__body__input_pw_container"
            android:layout_below="@+id/loginActivity__body__input_id_container"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/loginActivity__body__input_pw_icon"
                android:src="@drawable/lock_unfocus"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/loginActivity__body__input_pw_edit"
                android:hint="Password"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:background="@null"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/loginActivity__body__input_pw_icon"
                android:paddingStart="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginActivity__footer__container"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/loginActivity__footer__btn1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/loginActivity__footer__btn1_signIn"
                android:text="@string/sign_in"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/gradation_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginActivity__footer__btn2_container"
            android:layout_below="@+id/loginActivity__footer__btn1_container"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/loginActivity__footer__btn1_signUp"
                android:text="Sign Up"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/gradation_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>